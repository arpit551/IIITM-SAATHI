<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/text_view_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="monospace"
        android:text="WELCOME TO"
        android:textFontWeight="80"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_view_id"
        android:layout_marginTop="10dp"
        android:text="IIIT Gwalior"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="35sp" />

    <Button
        android:id="@+id/currentlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/destinationlocation"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Your Current Location"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/destinationlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:text="Your Destination"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/destinationlocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Go"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:ignore="UnknownId" />



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/logo_image" />


